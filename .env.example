# do not put your whole application configuration in it, only what differ from one deploy to another.

# Application
APP_ENV = "development"
APP_NAME = "Rosem"

# Directories
APP_PATH        = "${DOCUMENT_ROOT}/../app"
APP_PUBLIC_PATH = "${DOCUMENT_ROOT}"
APP_CONFIG_FILE = "${DOCUMENT_ROOT}/../config/app.php"
CACHE_PATH      = "${DOCUMENT_ROOT}/../cahce"

# Database
DATABASE_DRIVER    = "mysql"
DATABASE_HOST      = "localhost"
DATABASE_PORT      = 27017
DATABASE_NAME      = "rosem"
DATABASE_USERNAME  = "root"
DATABASE_PASSWORD  = ""
DATABASE_CHARSET   = "utf8"
DATABASE_COLLATION = "utf8_unicode_ci"
DATABASE_PREFIX    = ""
DATABASE_MIGRATIONS_PATHS = "${APP_DIR}/*/*/etc/db/migrations"

# Admin
ADMIN_USERNAME = "rosem"
ADMIN_PASSWORD = "123456"
ADMIN_SESSION_LIFETIME = 6000
